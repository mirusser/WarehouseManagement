@model IEnumerable<WarehouseManagement.Models.ComputerComponents>

@{
    ViewBag.Title = "List of Computer componenents";
}

<h2>List of Computer componenents</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfSubassembly)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatalogNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Barcode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfSubassembly.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barcode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-info btn-xs col-md-4 col-xs-12" })  
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info btn-xs col-md-4 col-xs-12" })  
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-info btn-xs col-md-4 col-xs-12" }) 
        </td>
    </tr>
}

</table>
